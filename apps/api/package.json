{
  "name": "api",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "dev": "nodemon -r tsconfig-paths/register -r dotenv/config src/index.ts",
    "build": "rimraf ./dist && tsc --project tsconfig.json && tsc-alias -p tsconfig.json",
    "start": "node dist/index.js",
    "lint": "npm run lint:eslint & npm run lint:prettier",
    "lint:fix": "npm run lint:eslint:fix & npm run lint:prettier:fix",
    "lint:eslint": "npx eslint --ext .js,.ts",
    "lint:eslint:fix": "npx eslint --fix --ext .js,.ts",
    "lint:prettier": "npx prettier --check './**/*.{js,ts}'",
    "lint:prettier:fix": "npx prettier --write './**/*.{js,ts}'"
  },
  "dependencies": {
    "@types/morgan": "^1.9.7",
    "envalid": "^8.0.0",
    "eslint-config-custom": "*",
    "express": "^4.18.2",
    "express-async-handler": "^1.2.0",
    "helmet": "^7.0.0",
    "morgan": "^1.10.0",
    "prettier-config-custom": "*",
    "winston": "^3.11.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/cors": "^2.8.15",
    "@types/express": "^4.17.20",
    "@types/node": "^20.8.9",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "nodemon": "^3.0.1",
    "rimraf": "^5.0.5",
    "ts-node": "^10.9.1",
    "tsc-alias": "^1.8.8",
    "tsconfig": "*",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.2.2"
  }
}
