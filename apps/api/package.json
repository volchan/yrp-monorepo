{
  "name": "api",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "dev": "nodemon -r tsconfig-paths/register -r dotenv/config src/index.ts",
    "build": "rimraf ./dist && tsc --project tsconfig.json && tsc-alias -p tsconfig.json",
    "serve": "node dist/index.js",
    "lint": "npm eslint && npm prettier",
    "lint:fix": "npm eslint:fix && npm prettier:fix",
    "eslint": "eslint --ext .js,.ts,.jsx,.tsx",
    "eslint:fix": "eslint --fix --ext .js,.ts,.jsx,.tsx",
    "prettier": "prettier --check './**/*.{js,jsx,ts,tsx}'",
    "prettier:fix": "prettier --write './**/*.{js,jsx,ts,tsx}'"
  },
  "dependencies": {
    "@types/morgan": "^1.9.7",
    "eslint-config-custom": "*",
    "express": "^4.18.2",
    "express-async-handler": "^1.2.0",
    "helmet": "^7.0.0",
    "morgan": "^1.10.0",
    "prettier-config-custom": "*",
    "winston": "^3.11.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/express": "^4.17.20",
    "@types/node": "^20.8.9",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "nodemon": "^3.0.1",
    "rimraf": "^5.0.5",
    "ts-node": "^10.9.1",
    "tsc-alias": "^1.8.8",
    "tsconfig": "*",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.2.2"
  }
}
